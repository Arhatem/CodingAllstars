    function trackShare(evt) {
        jQuery.ajax(Drupal.settings.NoodleTimes.track_share_url + evt.data.service, {});
        var shareType = 0;
        var isQuote = false;
        var name = evt.data.service;
        var shareUrl = evt.data.url;
        if(shareUrl.indexOf('=')!=-1 && shareUrl.indexOf('?')!=-1){
            var shareParams = shareUrl.split('?');
            var len = shareParams.length-1;
            var share = shareParams[len].split('=');
            if(share[1].indexOf('quote') != -1){
                isQuote = true;
            };
        }
        if(shareUrl.indexOf('/')!=-1){
            var cont = shareUrl.split('/');
        }
        var contId = cont[4];
        if(isQuote){
            if(name === 'fb'){
                shareType = 6;
            }else if(name === 'twitter'){
                shareType = 7;
            }else if(name === 'googleplus'){
                shareType = 8;
            }else if(name === 'linkedin'){
                shareType = 9;
            }else if(name === 'weixin'){
                shareType = 10;
            }
        }else{
            if(name === 'fb'){
                shareType = 1;
            }else if(name === 'twitter'){
                shareType = 2;
            }else if(name === 'googleplus'){
                shareType = 3;
            }else if(name === 'linkedin'){
                shareType = 4;
            }else if(name === 'weixin'){
                shareType = 5;
            }
        }
        $.ajax({
            type: "post",
            url: '/www/addShareCounts.msp',
            data:{'contId':contId,'shareType':shareType,'type':1,'shareTimes':1,'adv':1},
            dataType: "json",
            success: function (resultMap) {
                 return true;
            },
            erro: function (resultMap) {

            }
        });
    }
</script>
<script type="text/javascript"> 
        function addCounts(fbUri,shareType){
            if(typeof(fbUri) != 'undefined' || fbUri != ''){
                if(fbUri.indexOf('&')!=-1){
                    var urls = fbUri.split('&');
                    if(urls[2].indexOf('%2F') != -1){
                        var cont = urls[2].split('%2F');
                    }
                    var contId = cont[4];
                }
                if(typeof(contId) != 'undefined' || contId != null){
                    $.ajax({
                        type: "post",
                        url: '/www/addShareCounts.msp',
                        data:{'contId':contId,'shareType':shareType,'type':1,'shareTimes':1,'adv':1},
                        dataType: "json",
                        success: function (resultMap) {
                             return true;
                        },
                        erro: function (resultMap) {

                        }
                    });
                }
            }
        }
</script>
