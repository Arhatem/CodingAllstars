    function initTimeZoneTimeNews(){
        $('.date').each(function(i){
            var spanHtml = '<span class=""></span>';
            $(this).find("span").remove();
            var time=$(this).html();
            var chaTime = changeTime(time);
            $(this).html(spanHtml+chaTime)
        })
    }

    // wap、www其他详情页插入订阅模块
    function addNewsletter(htmlStr) {
        var html = document.createElement("div");
        html.className = "newsletter_detail_inset_wrap";

        function insertAfter(curNode) {
            html.innerHTML = htmlStr;
            curNode.parentNode.insertBefore(html, curNode.nextElementSibling);
        }

        var wrapDom = document.querySelector(".content");
        // 插入到第三行段落
        var i = 0,
            key = 0;
        try {
            if (wrapDom && wrapDom.children) {
                [].forEach.call(wrapDom.children, function (dom, index) {
                    var isOther =
                        dom.getAttribute("class") ||
                        dom.innerHTML == "" ||
                        dom.tagName != "P";
                    if (!isOther && i < 2) {
                        i += 1;
                        key = index;
                    } else if (!isOther && i == 2) {
                        i += 1;
                        html.setAttribute("data-areaid", "article");
                        insertAfter(dom);
                    }
                });
            }
        } catch (e) {
            console.log("insert err", e);
        }

        // 若正文不足3段： 正文、topics（如有） 的下方
        if (i <= 2) {
            var shareDom = document.querySelector(
                ".sharing.sharing-news.visible-xs.visible-sm"
            );
            html.setAttribute("data-areaid", "bottom");
            shareDom && insertAfter(shareDom);
        }
    }

    var newsletterHtmlStr = '<div class="ff_newsletterWrap maxWidth830" data-contid="1009380" data-pagetype="normal" data-objecttype="normal_article">' +
        '    <div class="ff_newsletterContainer">' +
        '      <div class="ff_newsletterLeft">' +
        '        <img src="/www/V1/images/newsletter_icon.png" alt="" />' +
        '      </div>' +
        '      <div class="ff_newsletterRight">' +
        '        <div class="ff_top_title">SUBSCRIBE TO OUR NEWSLETTER</div>' +
        '        <div class="ff_searchBox">' +
        '          <input class="ff_search_input" type="text" placeholder=\'Enter your email here\' />' +
        '          <div class="ff_search_button">Submit</div>' +
        '        </div>' +
        '        <div class="ff_protocol">By submitting, you agree to our <a class="ff_aHref" href="/terms-use">Terms Of Use.</a>' +
        '        </div>' +
        '        <div class="ff_error_email">*Please enter an email address.</div>' +
        '        <div class="ff_close">' +
        '        </div>' +
        '      </div>' +
        '    </div>' +
        '    <div class="fc_toast fc_toast_hide">' +
        '      <div class="fc_mask"></div>' +
        '    </div>' +
        '  </div>'
    addNewsletter(newsletterHtmlStr);
